{
	"root": true,
	"extends": [
		"wikimedia/client/common",
		"wikimedia/language/es2020",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"parserOptions": {
		"sourceType": "module"
	},
	"env": {
		"browser": true,
		"jest": true
	},
	"globals": {
		"global": "writable",
		"mockMwConfigGet": "writable"
	},
	"rules": {
		"compat/compat": [ "error", "last 2 chrome versions, last 2 firefox versions" ],
		"max-len": "off"
	}
}
